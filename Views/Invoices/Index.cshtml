@model IEnumerable<TaskTracker.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@await Html.PartialAsync("_CreateForm")

<p>
    <button id="create-new-btn" class="btn btn-primary">Create New</button>
</p>

<div class="row mb-2">
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.InvoiceDate)</strong></div>
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.DueDate)</strong></div>
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.TotalAmount)</strong></div>
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Status)</strong></div>
    <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Client)</strong></div>
    <div class="col-md-2"><strong>Actions</strong></div>
</div>

@foreach (var item in Model)
{
    @await Html.PartialAsync("_DisplayRow", item)
    @await Html.PartialAsync("_EditFormRow", item)
}

<style>
    .edit-mode .form-control, #create-form .form-control {
        width: 100%;
        box-sizing: border-box;
        margin: 0;
        padding: 4px;
    }

    .edit-mode .text-danger, #create-form .text-danger {
        font-size: 0.8em;
        display: block;
    }

    .edit-mode .btn, #create-form .btn {
        margin-right: 5px;
    }

    .alert-success {
        transition: opacity 1s ease-in-out;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/site.min.js" asp-append-version="true"></script>
}