@{
    ViewData["Title"] = "Set Timezone";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">Set Your Timezone</h4>
                <p>Please select your timezone to ensure accurate time tracking.</p>
                <form asp-controller="Home" asp-action="SaveTimezone" method="post">
                    <div class="mb-3">
                        <label class="form-label">Timezone</label>
                        <select name="TimezoneOffset" class="form-control" asp-items="@ViewBag.Timezones" required></select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Timezone</button>
                </form>
            </div>
        </div>
    </div>
</div>