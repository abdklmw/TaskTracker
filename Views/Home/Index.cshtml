@using TaskTracker.Models.TimeEntries
@model IEnumerable<TimeEntry>

@{
    ViewData["Title"] = "Home";
    var timezoneOffset = ViewBag.TimezoneOffset;
}

<!-- Display success or error messages -->
@await Html.PartialAsync("~/Views/Shared/_AlertsPartial.cshtml")

@await Html.PartialAsync("~/Views/TimeEntries/_CreateForm.cshtml")

@await Html.PartialAsync("~/Views/TimeEntries/_RunningTimers.cshtml", Model)

@section Scripts {
    <script>
        var userTimezoneOffset = @timezoneOffset;
    </script>
}