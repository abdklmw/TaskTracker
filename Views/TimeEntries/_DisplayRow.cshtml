@model TaskTracker.Models.TimeEntry

<tr id="display-row-@Model.TimeEntryID" class="display-mode">
    <td data-field="Client">@Model.Client.Name</td>
    <td data-field="Project">@Model.Project.Name</td>
    <td data-field="StartDateTime">@Model.StartDateTime.ToString("g")</td>
    <td data-field="EndDateTime">@(Model.EndDateTime.HasValue ? Model.EndDateTime.Value.ToString("g") : "")</td>
    <td data-field="HoursSpent">@(Model.HoursSpent.HasValue ? Model.HoursSpent.Value.ToString("F2") : "")</td>
    <td data-field="Description">@Model.Description</td>
    <td>
        <button class="btn btn-primary edit-btn" data-id="@Model.TimeEntryID">Edit</button>
        <a asp-action="Delete" asp-route-id="@Model.TimeEntryID" class="btn btn-danger">Delete</a>
    </td>
</tr>