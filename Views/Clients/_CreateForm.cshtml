<div id="create-form" style="display:none; margin-bottom: 20px;">
    <form asp-action="Create" method="post">
        <table class="table table-bordered">
            <tr>
                <td>
                    <input name="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="@(new TaskTracker.Models.Client().Name)" class="text-danger"></span>
                </td>
                <td>
                    <input name="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="@(new TaskTracker.Models.Client().Email)" class="text-danger"></span>
                </td>
                <td>
                    <input name="Phone" class="form-control" placeholder="Phone" />
                    <span asp-validation-for="@(new TaskTracker.Models.Client().Phone)" class="text-danger"></span>
                </td>
                <td>
                    <input name="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="@(new TaskTracker.Models.Client().Address)" class="text-danger"></span>
                </td>
                <td>
                    <input name="DefaultRate" class="form-control" type="number" step="0.01" placeholder="Default Rate" />
                    <span asp-validation-for="@(new TaskTracker.Models.Client().DefaultRate)" class="text-danger"></span>
                </td>
                <td>
                    <button type="submit" class="btn btn-success create-btn">Create</button>
                    <button type="button" class="btn btn-secondary cancel-create-btn">Cancel</button>
                </td>
            </tr>
        </table>
    </form>
</div>