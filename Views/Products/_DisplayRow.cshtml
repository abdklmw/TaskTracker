@using TaskTracker.Models.Product
@model ProductRowViewModel
@{
    if (Model == null || Model.Product == null)
    {
        return;
    }

    var product = Model.Product;
}
<div id="display-row-@product.ProductID" class="display-mode card mb-2 @(Model.Parity)-row">
    <div class="card-body position-relative">
        <div class="row">
            <div class="col-md-2" data-field="ProductSku">@product.ProductSku</div>
            <div class="col-md-4" data-field="Name">@product.Name</div>
            <div class="col-md-4" data-field="Description">@product.Description</div>
            <div class="col-md-2" data-field="UnitPrice">
                @(product.UnitPrice is decimal price ? $"${price:F2}" : "")
            </div>
        </div>
        <div class="dropdown-container position-absolute top-0 end-0 mt-2 me-2">
            <div class="dropdown d-inline-block">
                <button class="btn btn-primary dropdown-toggle dropdown-icon-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Actions">
                    <img src="/images/icons/action-menu.svg" alt="Dropdown" class="dropdown-icon" />
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <button class="dropdown-item edit-btn" data-id="@product.ProductID">Edit</button>
                    </li>
                    <li>
                        <a class="dropdown-item delete-action-link"
                           asp-action="Delete"
                           asp-route-id="@product.ProductID">Delete</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>