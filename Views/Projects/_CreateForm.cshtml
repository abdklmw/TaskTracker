<div id="create-form" style="display:none; margin-bottom: 20px;">
    <form asp-action="Create" method="post" class="card p-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Name</label>
                <input name="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="@(new TaskTracker.Models.Project().Name)" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Description</label>
                <input name="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="@(new TaskTracker.Models.Project().Description)" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Rate</label>
                <input name="Rate" class="form-control" type="number" step="0.01" placeholder="Rate" />
                <span asp-validation-for="@(new TaskTracker.Models.Project().Rate)" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success create-btn">Create</button>
                <button type="button" class="btn btn-secondary cancel-create-btn">Cancel</button>
            </div>
        </div>
    </form>
</div>