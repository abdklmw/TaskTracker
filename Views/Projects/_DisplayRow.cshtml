@model TaskTracker.Models.Project

<div id="display-row-@Model.ProjectID" class="display-mode card mb-2">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4" data-field="Name">@Model.Name</div>
            <div class="col-md-4" data-field="Description">@(Model.Description ?? "")</div>
            <div class="col-md-2" data-field="Rate">@(Model.Rate.HasValue ? $"${Model.Rate.Value.ToString("F2")}" : "")</div>
            <div class="col-md-2">
                <button class="btn btn-primary edit-btn" data-id="@Model.ProjectID">Edit</button>
                <a asp-action="Delete" asp-route-id="@Model.ProjectID" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>