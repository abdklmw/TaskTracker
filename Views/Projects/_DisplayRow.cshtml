@model TaskTracker.Models.Project

<tr id="display-row-@Model.ProjectID" class="display-mode">
    <td data-field="Name">@Model.Name</td>
    <td data-field="Description">@Model.Description</td>
    <td data-field="Rate">@(Model.Rate.HasValue ? $"${Model.Rate.Value.ToString("F2")}" : "")</td>
    <td>
        <button class="btn btn-primary edit-btn" data-id="@Model.ProjectID">Edit</button>
        <a asp-action="Delete" asp-route-id="@Model.ProjectID" class="btn btn-danger">Delete</a>
    </td>
</tr>