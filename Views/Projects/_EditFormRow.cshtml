@model TaskTracker.Models.Project

<div id="edit-row-@Model.ProjectID" class="edit-mode card mb-2" style="display:none;">
    <form id="edit-form-@Model.ProjectID" asp-action="Edit" asp-route-id="@Model.ProjectID" method="post" class="card-body">
        <input type="hidden" asp-for="@Model.ProjectID" name="ProjectID" />
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" name="Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" name="Description" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Rate</label>
                <input asp-for="@Model.Rate" class="form-control" type="number" step="0.01" name="Rate" />
                <span asp-validation-for="@Model.Rate" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success save-btn">Save</button>
                <button type="button" class="btn btn-secondary cancel-btn" data-id="@Model.ProjectID">Cancel</button>
            </div>
        </div>
    </form>
</div>